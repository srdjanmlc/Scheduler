<resources>

    <!-- Base application theme. -->
    <!--NoActionBar is the theme because I want to set toolbar as action bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--this is also formating for the toolbar to look better and that toolbar be positions below system status bar-->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--setting global fonts-->
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>



</resources>
